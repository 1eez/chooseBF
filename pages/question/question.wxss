/* pages/question/question.wxss */
.web_bg {  /*这句是定义背景图片*/
  position:fixed;
  top: 0;
  left: 0;
  width:100%;
  height:100%;
  z-index:-10;

  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center 0;
  background-size:100%;
  -moz-background-size:100% 100%;
  background-image: url(https://love.nidele.com/images/questionbg.jpg)
}

.question1_view { /*问题描述行的样式，最关键是最后一行表示距离上面多远*/
   display: flex;
   flex-direction: column;
   align-items: left;
   margin-top:120rpx;
}

.question1_class{ /*问题描述行的样式，主要定义字体相关的*/
  font-size: 32rpx;
  font-family: "黑体";
  font-weight: bold;
  color: #fff;
  text-align:left;
  margin-left: 40rpx;

  /*改成block类型才能设置宽高
  display: block;
  width: 800rpx;
  height: 50rpx;*/
  /*设置文本垂直方向居中
  line-height: 50rpx;*/
}


.answer1_view { /*答案描述行的样式，最关键是最后一行表示距离上面多远*/
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-top:100rpx;
  font-size: 32rpx;
  font-family: "黑体";
  color: #fff;
  text-align:left;
  margin-left: 20rpx;
}

.btn { /*这句是按钮的样式，核心是第一句，宽度不要沾满整行*/
  width: 85%;
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-top:80rpx;
  font-size: 32rpx;
  font-family: "黑体";
  text-align:left;
  margin-left: 60rpx;
  background-color:#ff634b;
  color: #fff;
}

.btn_hover { /*这句是按钮按下去后的样式*/
  background-color:#fd8b7a96;
}

.remark1_view { /*"这不是我的考核项"，可定义文字大小*/
  display: flex;
  flex-direction: column;
  text-decoration: underline;
  align-items: center;
  margin-top:50rpx;
  font-size: 30rpx;
  font-family: "黑体";
  color: #fff;
}