/* pages/question/question.wxss */
.web_bg {  /*这句是定义背景图片*/
  position:fixed;
  top: 0;
  left: 0;
  width:100%;
  height:100%;
  z-index:-10;

  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center 0;
  background-size:100%;
  -moz-background-size:100% 100%;
  background-image: url(https://localhost/images/questionbg.jpg)
}

.question1_view { /*问题描述行的样式，最关键是最后一行表示距离上面多远*/
   display: flex;
   flex-direction: column;
   align-items: left;
   margin-top:90rpx;
}

.question1_class{ /*问题描述行的样式，主要定义字体相关的*/
  font-size: 32rpx;
  font-family: "黑体";
  font-weight: bold;
  color: #fff;
  text-align:left;
  margin-left: 40rpx;

  /*改成block类型才能设置宽高
  display: block;
  width: 800rpx;
  height: 50rpx;*/
  /*设置文本垂直方向居中
  line-height: 50rpx;*/
}


.answer1_view { /*答案描述行的样式，最关键是最后一行表示距离上面多远*/
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-top:100rpx;
  font-size: 32rpx;
  font-family: "黑体";
  color: #fff;
  text-align:left;
  margin-left: 20rpx;
}

.btn { /*这句是按钮的样式，核心是第一句，宽度不要沾满整行*/
  width: 85%;
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-top:80rpx;
  font-size: 32rpx;
  font-family: "黑体";
  text-align:left;
  margin-left: 60rpx;
  background-color:#ff634b;
  color: #fff;
}

.btn_hover { /*这句是按钮按下去后的样式*/
  background-color:#fd8b7a96;
}

.remark1_view { /*"这不是我的考核项"，可定义文字大小*/
  display: flex;
  flex-direction: column;
  text-decoration: underline;
  align-items: center;
  margin-top:60rpx;
  font-size: 30rpx;
  font-family: "黑体";
  color: #fff;
}

.progress {
	  overflow: hidden;
	  height: 25rpx;
	  margin-bottom: 20rpx;
	  margin-top: 0rpx;
	  margin-left: 4rpx;
	  background-color: #f7f7f7;
	  background-image: -moz-linear-gradient(top, #f5f5f5, #f9f9f9);
	  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#f5f5f5), to(#f9f9f9));
	  background-image: -webkit-linear-gradient(top, #f5f5f5, #f9f9f9);
	  background-image: -o-linear-gradient(top, #f5f5f5, #f9f9f9);
	  background-image: linear-gradient(to bottom, #f5f5f5, #f9f9f9);
	  background-repeat: repeat-x;
	  -webkit-box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
	  -moz-box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
	  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
	  -webkit-border-radius: 4rpx;
	  -moz-border-radius: 4rpx;
	  border-radius: 4rpx;
	  width:99%;
	  margin-right:2rpx;
}

.progress .bar {
	  width: 0%;
	  height: 100%;
	  color: #ffffff;
	  float: left;
	  font-size: 20rpx;
	  text-align: center;
	  align-items: center;
	  display: flex;
	  justify-content: center;
	  text-shadow: 0 -1rpx 0 rgba(0, 0, 0, 0.25);
	  background-color: #0e90d2;
	  background-image: -moz-linear-gradient(top, #e94a4a, #9e0d0d);
	  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#e94a4a), to(#9e0d0d));
	  background-image: -webkit-linear-gradient(top, #e94a4a, #9e0d0d);
	  background-image: -o-linear-gradient(top, #e94a4a, #9e0d0d);
	  background-image: linear-gradient(to bottom, #e94a4a, #9e0d0d);
	  background-repeat: repeat-x;
	  -webkit-box-shadow: inset 0 -1rpx 0 rgba(0, 0, 0, 0.15);
	  -moz-box-shadow: inset 0 -1rpx 0 rgba(0, 0, 0, 0.15);
	  box-shadow: inset 0 -1rpx 0 rgba(0, 0, 0, 0.15);
	  -webkit-box-sizing: border-box;
	  -moz-box-sizing: border-box;
	  box-sizing: border-box;
	  -webkit-transition: width 0.6s ease;
	  -moz-transition: width 0.6s ease;
	  -o-transition: width 0.6s ease;
	  transition: width 0.6s ease;
}