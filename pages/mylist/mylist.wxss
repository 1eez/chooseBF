.web_bg {  /*这句是定义背景图片*/
  position:fixed;
  top: 0;
  left: 0;
  width:100%;
  height:100%;
  z-index:-10;

  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center 0;
  background-size:100%;
  -moz-background-size:100% 100%;
  background-image: url(https://love.nidele.com/images/analysisbg.jpg)
}