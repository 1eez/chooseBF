/* pages/mylist/mylist.wxss */
.web_bg {  /*这句是定义背景图片*/
  position:fixed;
  top: 0;
  left: 0;
  width:100%;
  height:100%;
  z-index:-10;

  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center 0;
  background-size:100%;
  -moz-background-size:100% 100%;
  background-image: url(https://love.nidele.com/images/mylistbg.jpg)
}

.line{
	margin-left: 10rpx;
	padding: 0rpx;
	border-bottom: 1px solid #ddd;
}

.flex-wrap{
	display: flex;
}
.flex-item{
	flex: 1;
}
.flex-wrap.flex-direction-col{
	flex-direction: column;
}
.flex-wrap.flex-direction-row{
	flex-direction: row;
}

.list_view { /*问题描述行的样式，最关键是最后一行表示距离上面多远*/
   display: flex;
   flex-direction: column;
   margin-top:250rpx;
}

.name2_view { /*问题描述行的样式，最关键是最后一行表示距离上面多远*/
   display: flex;
   flex-direction: column;
   margin-top:220rpx;
}

.title1{ /*问题描述行的样式，主要定义字体相关的*/
  font-size: 32rpx;
  font-family: "黑体";
  font-weight: bold;
  color: #000;
  text-align:left;
  margin-left: 10rpx;
}

.title2{ /*问题描述行的样式，主要定义字体相关的*/
  font-size: 30rpx;
  font-family: "黑体";
  font-weight: bold;
  color: #999;
  text-align:left;
  margin-left: 10rpx;
}
.mini-btn1 {
  margin-right: 20rpx;
}

.btn { /*这句是按钮的样式，核心是第一句，宽度不要沾满整行*/
  width: 85%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:250rpx;
  font-size: 32rpx;
  font-family: "黑体";
  text-align:left;
  margin-left: 60rpx;
  background-color:#ff634b;
  color: #fff;
}

.btn_hover { /*这句是按钮按下去后的样式*/
  background-color:#fd8b7a96;
}
